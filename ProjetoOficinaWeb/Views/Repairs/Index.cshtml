@model IEnumerable<ProjetoOficinaWeb.Data.Entities.Repair>

@{
    ViewData["Title"] = "Index";
}

<h1>Appointments</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            @*@if (this.User.IsInRole("Receptionist"))
            {
                <th>
                    @Html.DisplayNameFor(model => model.User.FullName)
                </th>
            }*@
            <th>
                @Html.DisplayNameFor(model => model.Appointment.AppointmentDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mechanic)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Service)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vehicle)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                @*@if (this.User.IsInRole("Receptionist, Mechanic"))
                {
                    <th>
                        @Html.DisplayFor(modelItem => item.User.FullName)
                    </th>
                }*@
                <td>
                    @Html.DisplayFor(modelItem => item.Appointment.AppointmentDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Mechanic)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Service)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Vehicle)
                </td>
                <td>
                    <a asp-action="Repair" asp-route-id="@item.Id" class="btn btn-info" id="btnDeliver">Repair</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger" id="btnDelete">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
