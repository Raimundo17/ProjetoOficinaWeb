@model IEnumerable<ProjetoOficinaWeb.Data.Entities.Appointment>

@{
    ViewData["Title"] = "Index";
}

<h1>Appointments</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            @if (this.User.IsInRole("Admin"))
            {
                <th>
                    @Html.DisplayNameFor(model => model.User.FullName)
                </th>
            }
            <th>
                @Html.DisplayNameFor(model => model.AppointmentDate)
            </th>
            <th>
                # Lines
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Value)
            </th>
        </tr>
    </thead>
</table>
<tbody>
    @foreach(var item in Model)
            {
    <tr>
        @if (this.User.IsInRole("Admin"))
        {
            <th>
                @Html.DisplayNameFor(modelItem => item.User.FullName)
            </th>
        }
        <td>
            @Html.DisplayFor(modelItem => item.AppointmentDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RepairDate)
        </td>
        <td>
            # Lines
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Value)
        </td>
        <td>
            <a asp-action="Book" asp-route-id="@item.Id" class="btn btn-info" id="btnDeliver">Book</a>
            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger" id="btnDelete">Delete</a>
        </td>
    </tr>
     }
</tbody>