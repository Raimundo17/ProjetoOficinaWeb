@model IEnumerable<ProjetoOficinaWeb.Data.Entities.AppointmentDetailTemp>

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<p>
    <a asp-action="AddVehicle" class="btn btn-success">Add Vehicle</a>
    <a asp-action="ConfirmAppointment" class="btn btn-primary" id="btnConfirm">Confirm Appointment</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Vehicle.LicensePlate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Service.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Service.Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Vehicle.LicensePlate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Service.Description)
                <td>
                    @Html.DisplayFor(modelItem => item.Service.Price)
                </td>
                <td id="@item.Id">
                    <a asp-action="DeleteItem" asp-route-id="@item.Id" class="btn btn-danger" id="btnDeleteItem">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

